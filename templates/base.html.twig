<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Projects{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            <script>  
            
                $(function() {
                    $('#statusfilter').on('change', function() {
                      var val = this.value;
                      console.log(val)
                      $('.list-group-item').each(function() {
                        //checking value of opton in cars selct is same
                        if ($(this).attr("projectstatus") == val) {
                            console.log($(this).attr("projectstatus"))
                          $(this).show(); //show it
                        } else {
                          $(this).hide(); //hide other
                        }
                      })
                    })
                    $('#titlefilter').on('change', function() {
                      var val = this.value;
                      console.log(val)
                      $('.list-group-item').each(function() {
                        //checking value of opton in cars selct is same
                        if ($(this).attr("projecttitle") == val) {
                            console.log($(this).attr("projecttitle"))
                          $(this).show(); //show it
                        } else {
                          $(this).hide(); //hide other
                        }
                      })
                    })
                      $('#imagefilter').on('change', function() {
                      var val = this.value;
                      console.log(val)
                      $('.list-group-item').each(function() {
                        //checking value of opton in cars selct is same
                        if ($(this).attr("projectimage") == val) {
                            console.log($(this).attr("projectimage"))
                          $(this).show(); //show it
                        } else {
                          $(this).hide(); //hide other
                        }
                      })
                    })
              });

        </script>
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
